<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Home"
    android:orientation="vertical">
    <TextView
        android:id="@+id/newAudioFilesMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_cloud_music_files"
        android:paddingTop="3dp"
        android:textColor="@android:color/holo_blue_bright"
        android:gravity="start"/>
    <TextView
        android:id="@+id/newCloudAudioCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:textColor="@android:color/holo_blue_bright"
        android:gravity="center"/>
    <ListView
        android:dividerHeight="1dp"
        android:id="@+id/newCloudFiles"
        android:layout_height="150dp"
        android:layout_width="fill_parent"
        android:textColor="@android:color/holo_blue_bright"/>

    <TextView
        android:id="@+id/newLocalAudioFilesMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_local_music_files"
        android:paddingTop="3dp"
        android:textColor="@android:color/holo_red_light"
        android:gravity="start"/>
    <TextView
        android:id="@+id/newLocalAudioCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center"/>
    <ListView
        android:dividerHeight="1dp"
        android:id="@+id/newLocalFiles"
        android:layout_height="150dp"
        android:layout_width="fill_parent"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/cloudAudioFilesMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cloud_music_files"
        android:paddingTop="10dp"
        android:textColor="@android:color/holo_green_light"
        android:gravity="start"/>
    <TextView
        android:id="@+id/cloudAudioCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:textColor="@android:color/holo_green_light"
        android:gravity="center"/>
    <ListView
        android:dividerHeight="1dp"
        android:id="@+id/cloudFiles"
        android:layout_height="100dp"
        android:layout_width="fill_parent"
        android:textColor="@android:color/holo_green_light"/>


    <TextView
        android:id="@+id/phoneAudioFilesMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_music_files"
        android:paddingTop="10dp"
        android:textColor="@android:color/holo_orange_light"
        android:gravity="start"/>
    <TextView
        android:id="@+id/phoneAudioCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:textColor="@android:color/holo_orange_light"
        android:gravity="center"/>

    <ListView
        android:dividerHeight="1dp"
        android:id="@+id/phoneFiles"
        android:layout_height="100dp"
        android:layout_width="fill_parent"
        android:textColor="@android:color/holo_orange_light"/>

</LinearLayout>
